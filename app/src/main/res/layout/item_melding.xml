<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:onClick="visMelding"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:weightSum="1"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">


    <TextView
        android:id="@+id/vismelding"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="7dp"
        android:layout_weight="0.32"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:text="Melding"

        android:textColor="?attr/editTextColor"
        android:textSize="20sp"
        app:layout_constraintRight_toLeftOf="@+id/visdag"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/vistid"
        android:layout_marginEnd="3dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/visdag" />

    <TextView
        android:id="@+id/visdag"
        android:layout_width="75dp"
        android:layout_height="22dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:gravity="fill_horizontal|center"
        android:textSize="14sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/vistid"
        android:layout_width="75dp"
        android:layout_height="22dp"
        android:layout_marginTop="9dp"
        android:gravity="fill_horizontal|center"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@+id/visdag"
        app:layout_constraintRight_toRightOf="@+id/visdag"
        app:layout_constraintTop_toBottomOf="@+id/visdag"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

</android.support.constraint.ConstraintLayout>