<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bushu.studentkontakter.VisMelding"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <android.support.design.widget.AppBarLayout
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:theme="@style/AppTheme.AppBarOverlay"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include layout="@layout/apptoolbar" />
    </android.support.design.widget.AppBarLayout>

    <TextView
        android:id="@+id/vis_hele_melding"
        android:layout_width="407dp"
        android:layout_height="206dp"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="70dp"
        android:background="@android:color/white"
        android:paddingLeft="10dp"
        android:paddingTop="15dp"
        android:text="TextView"
        android:textColor="?attr/actionMenuTextColor"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/tid_datosendt"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_marginEnd="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="291dp"
        android:gravity="center_horizontal|center"
        android:text="TextView"
        android:textSize="16sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/avbryt_vismelding"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_marginEnd="90dp"
        android:layout_marginRight="90dp"
        android:layout_weight="1"
        android:background="?attr/colorAccent"
        android:clickable="true"
        android:onClick="avbrytVisMelding"
        android:text="AVBRYT"
        app:layout_constraintBottom_toBottomOf="@+id/slett_meld_btn"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintRight_creator="1" />

    <Button
        android:id="@+id/slett_meld_btn"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:background="?attr/colorAccent"
        android:clickable="true"
        android:onClick="slettMelding"
        android:text="Slett"
        tools:layout_constraintTop_creator="1"
        android:layout_marginEnd="57dp"
        app:layout_constraintRight_toLeftOf="@+id/avbryt_vismelding"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="168dp"
        app:layout_constraintTop_toBottomOf="@+id/vis_hele_melding"
        android:layout_marginBottom="167dp"
        android:layout_marginRight="163dp"
        app:layout_constraintVertical_bias="0.0" />
</android.support.constraint.ConstraintLayout>
